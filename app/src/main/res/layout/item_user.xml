<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">


        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="30dp" android:id="@+id/name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textSize="20sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="20dp" android:id="@+id/userHomeTown"
                app:layout_constraintTop_toBottomOf="@+id/name"
                android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>